{
    "manifest_version": 2,

    "name": "Site Palette",
    "version": "1.0",
    "description": "Displays the colors a site uses.",
    "author" : "@kevinsoffera",
    "homepage_url": "https://github.com/kevinsoffera/site-palette-extension",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon-32.png",
        "default_title": "Site Palette"
    },

    "permissions": [
        "tabs",
        "http://*/*",
		"https://*/*"
    ],

    "background": {
        "scripts": ["popup.js"]
    }


}