{
    "manifest_version": 2,

    "name": "Site Palette",
    "version": "1.0",
    "description": "Displays the colors a site uses.",
    "author" : "@kevinsoffera",
    "homepage_url": "https://github.com/kevinsoffera/site-palette-extension",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon-16.png",
        "default_title": "Site Palette"
    },

    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },

    "permissions": [
        "tabs",
        "http://*/*",
		"https://*/*"
    ],

    "background": {
        "scripts": ["popup.js"]
    }


}